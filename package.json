{
  "name": "knip-ui-extension",
  "displayName": "Knip UI",
  "publisher": "akshay7000",
  "description": "Beautiful UI for Knip - Find unused files, exports, and dependencies",
  "version": "0.3.0",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other",
    "Linters",
    "Programming Languages",
    "Education",
    "Testing"
  ],
  "keywords": [
    "knip",
    "unused",
    "dead code",
    "dependencies",
    "cleanup",
    "optimization",
    "performance",
    "refactoring",
    "code quality",
    "static analysis",
    "linting",
    "code review",
    "code smells",
    "technical debt",
    "code maintenance"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "knip-sidebar",
          "title": "Knip UI",
          "icon": "media/knip-icon.svg"
        }
      ]
    },
    "views": {
      "knip-sidebar": [
        {
          "id": "knip-webview",
          "name": "Knip UI",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "knip.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "knip.settings",
        "title": "Settings",
        "icon": "$(settings-gear)"
      }
    ],
    "configuration": {
      "title": "Knip Scanner",
      "properties": {
        "knipScanner.ignoredItems": {
          "type": "array",
          "default": [],
          "description": "List of files/dependencies to ignore in Knip scans"
        },
        "knipScanner.packageManager": {
          "type": "string",
          "enum": [
            "npm",
            "yarn"
          ],
          "default": "npm",
          "description": "Default package manager to use"
        }
      }
    }
  },
  "scripts": {
    "compile": "webpack --mode development",
    "compile-production": "webpack --mode production",
    "watch": "webpack --mode development --watch",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/node": "14.x",
    "typescript": "^4.0.0",
    "webpack": "^5.0.0",
    "ts-loader": "^9.4.4",
    "webpack-cli": "^5.1.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/knip-ui-extension"
  },
  "license": "MIT",
  "icon": "media/knip-icon.png"
}
